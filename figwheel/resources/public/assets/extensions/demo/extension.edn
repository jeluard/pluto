{:meta
 {:name          "Simple Demo"
  :description   "A simple demo of extension"
  :documentation "Nothing. Just see a text with dynamic random color."}

 :hooks/main
 {:name        ""
  :description ""
  :view        @views/main}

 :views/main
 [view {}
  [text {} "Hello"]
  (let [cond? @queries/random-boolean]
    (if cond?
      [text {:style {:color "green"}}
       "World?"]
      [text {:style {:color "red"}}
       "World?"]))]}
